#!/bin/bash
NAME="iosevka"
VERS="${!NAME}_version"
LINK=""
DEPS=""


IDIR=$(cat << '~fin.'

[ -e "$RIDSOURCES"/iosevka-9999.tar ] || raw https://github.com/ryanoasis/nerd-fonts/releases/latest/download/Iosevka.tar.xz

mo "$RIDSOURCES"/Iosevka.tar.xz "$RIDSOURCES"/iosevka-9999.tar
mkdir -pv /usr/share/fonts/iosevka

tar xvf "$RIDSOURCES"/iosevka-9999.tar -C /usr/share/fonts/iosevka

~fin.
)

RDIR=$(cat << '~fin.'

rm -rvf /usr/share/fonts/iosevka

~fin.
)

UDIR=$(cat << '~fin.'
~fin.
)
