#!/bin/bash
NAME="attr"
VERS="2.5.2"
LINK="https://download.savannah.gnu.org/releases/attr/attr-$VERS.tar.gz"
UPST="http://download.savannah.nongnu.org/releases/attr/?C=M&O=D"
SELE="html body table#list tbody tr.e td a"
DEPS=""


idir() {

./configure --prefix=/usr     \
            --disable-static  \
            --sysconfdir=/etc \
            --docdir=/tmp/rid/trash

make
make install

make distclean

CC="gcc -m32" ./configure \
    --prefix=/usr         \
    --disable-static      \
    --sysconfdir=/etc     \
    --libdir=/usr/lib32   \
    --host=i686-pc-linux-gnu

make
make DESTDIR=$PWD/DESTDIR install
cp -Rv DESTDIR/usr/lib32/* /usr/lib32
rm -rf DESTDIR

}

rdir() {

echo not implemented

}
