#!/bin/bash
NAME="lame"
VERS="3.100"
LINK="https://downloads.sourceforge.net/project/lame/lame/$VERS/lame-$VERS.tar.gz"
UPST="https://sourceforge.net/projects/lame/files"
VCMD="curl -s 'https://lame.sourceforge.io/' | grep download.php | head -n2 | tail -n1 | cut -dv -f2 | cut -d'<' -f1" # suboptimal, but no git repo
DEPS=""


idir() {

sed -i -e 's/^\(\s*hardcode_libdir_flag_spec\s*=\).*/\1/' configure

./configure --prefix=/usr --enable-mp3rtp --disable-static &&
make

make pkghtmldir=/tmp/rid/trash install

}

rdir() {

rm -rvf /usr/bin/{lame,mp3rtp}  \
        /usr/lib/libmp3lame.*   \
        /usr/include/lame

    }
