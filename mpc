#!/bin/bash
NAME="mpc"
VERS="${NAME}_version"; VERS="${!VERS}"
LINK="https://ftp.gnu.org/gnu/mpc/mpc-$VERS.tar.gz"
UPST="https://ftp.gnu.org/gnu/mpc/?C=M;O=D"
DEPS=""


IDIR=$(cat << '~fin.'

./configure --prefix=/usr    \
            --disable-static \
            --docdir=/tmp/rid/trash

make
make install

~fin.
)

RDIR=$(cat << '~fin.'

rm -vf /usr/lib/libmpc.so*

~fin.
)

UDIR=$(cat << '~fin.'
~fin.
)
