#!/bin/bash
NAME="mesa"
VERS="${NAME}_version"; VERS="${!VERS}"
LINK="https://mesa.freedesktop.org/archive/mesa-$VERS.tar.xz"
UPST="https://archive.mesa3d.org/?C=M;O=D"
SELE="body > table:nth-child(2) > tbody:nth-child(1) > tr:nth-child(3) > td:nth-child(2) > a:nth-child(1)"
DEPS="xorg_libraries libdrm mako pyyaml libglvnd libva libvdpau libvdpau_va_gl nettle"
# the deps need more testing

IDIR=$(cat << '~fin.'

mn \
    -D platforms=x11            \
    -D vulkan-drivers=""        \
    -D valgrind=disabled        \
    -D libunwind=disabled       \
    -D glvnd=enabled            \
    -D llvm=disabled            \
    -D gallium-drivers=nouveau  \
    -D video-codecs=all         

rm -rvf  ridbuild
mkdir -v ridbuild
cd       ridbuild

CC="gcc -m32" CXX="g++ -m32"                 \
PKG_CONFIG_PATH=$XORG_PREFIX/lib32/pkgconfig \
meson setup                                  \
    --prefix=$XORG_PREFIX                    \
    --libdir=$XORG_PREFIX/lib32              \
    --buildtype=release                      \
    --strip                                  \
    -D platforms=x11                         \
    -D gallium-drivers=nouveau               \
    -D vulkan-drivers=""                     \
    -D valgrind=disabled                     \
    -D libunwind=disabled                    \
    -D glvnd=enabled                         \
    -D video-codecs=all                      \
    -D llvm=disabled                         \
    .. &&
    sed -i 's/\/usr\/lib\//\/usr\/lib32\//g' ./build.ninja &&

ninja

DESTDIR=$PWD/DESTDIR ninja install
cp -vr DESTDIR/$XORG_PREFIX/lib32/* $XORG_PREFIX/lib32
if [ -d DESTDIR/$XORG_PREFIX/share/vulkan ]; then
     cp -vr DESTDIR/$XORG_PREFIX/share/vulkan $XORG_PREFIX/share
fi
rm -rf DESTDIR
ldconfig

~fin.
)

RDIR=$(cat << '~fin.'

echo not implemented

~fin.
)

UDIR=$(cat << '~fin.'
~fin.
)
