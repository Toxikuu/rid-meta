#!/bin/bash
NAME="bc"
VERS="${NAME}_version"; VERS="${!VERS}"
LINK="https://github.com/gavinhoward/bc/releases/download/$VERS/bc-$VERS.tar.xz"
UPST="https://github.com/gavinhoward/bc/tags"
DEPS=""


IDIR=$(cat << '~fin.'

CC=gcc ./configure --prefix=/usr -G -O3 -r
make
make install

~fin.
)

RDIR=$(cat << '~fin.'

rm -vf /usr/bin/{b,d}c

~fin.
)

UDIR=$(cat << '~fin.'
~fin.
)
