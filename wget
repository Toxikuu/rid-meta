#!/bin/bash
NAME="wget" # wget2, technically
VERS="2.2.0"
LINK="https://gnuwget.gitlab.io/wget2/wget2-latest.tar.gz"
UPST="https://gitlab.com/gnuwget/wget2/-/tags"
DEPS="libpsl make-ca libidn2 python tar autoconf automake gettext"


idir() {

cm  \
  --with-lzma             \
  --with-bzip2            \
  --without-lzip          \
  --sysconfdir=/etc       \
  --without-brotlidec     \
  --disable-doc           \
  --disable-rpath         \
  --enable-threads=posix  \
  --disable-nls           \
  --enable-year2038       \
  --with-gnu-ld           \
  --without-plugin-support

ln -sfv wget2 /usr/bin/wget

}

rdir() {

rm -vf /usr/bin/wget \
   /usr/share/man/man1/wget.1

}
