#!/bin/bash
NAME="diffutils"
VERS="${NAME}_version"; VERS="${!VERS}"
LINK="https://ftp.gnu.org/gnu/diffutils/diffutils-$VERS.tar.xz"
UPST="https://ftp.gnu.org/gnu/diffutils/?C=M;O=D"
DEPS=""


IDIR=$(cat << '~fin.'

cm

~fin.
)

RDIR=$(cat << '~fin.'

rm -vf  /usr/bin/cmp        \
        /usr/bin/diff{,3}   \
        /usr/bin/sdiff
        

~fin.
)

UDIR=$(cat << '~fin.'
~fin.
)
