#!/bin/bash
NAME="libxkbcommon"
VERS="${NAME}_version"; VERS="${!VERS}"
LINK="https://xkbcommon.org/download/$NAME-$VERS.tar.xz"
UPST="https://github.com/xkbcommon/libxkbcommon/releases/latest"
DEPS="xkeyboard_config libxcb wayland wayland_protocols"


IDIR=$(cat << '~fin.'

mn   -D enable-docs=false
32mn -D enable-docs=false

~fin.
)

RDIR=$(cat << '~fin.'

rm -rvf \
    /usr/bin/xkbcli               \
    /usr/lib{,32}/libxkbcommon*   \
    /usr/lib{,32}/libxkbregistry* \
    /usr/include/xkbcommon        \
    /usr/libexec/xkbcommon

~fin.
)

UDIR=$(cat << '~fin.'
~fin.
)
